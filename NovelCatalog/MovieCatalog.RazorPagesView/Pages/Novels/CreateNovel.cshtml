@page
@model NovelCatalog.RazorPagesView.Pages.Novels.CreateNovelModel
@{
    ViewData["Title"] = "Create novelist";
}

<div>
    <form method="post">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Enter title..." name="Title" />
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Enter description..." name="Description" />
        </div>
        <div class="form-group">
            <input type="date" class="form-control" name="ReleaseDate" />
        </div>
        <div class="form-group">
            <input type="number" class="form-control" name="HowManyPages" />
        </div>

        <h2>
            Choose categories
        </h2>
        <div class="form-group border-1">
            @foreach (var category in Model.Categories)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="CategoriesIds" value="@category.Value" id="@category.Value">
                    <label class="form-check-label" for="@category.Value">
                        @category.Text
                    </label>
                </div>
            }
        </div>
        <h2>
            Choose novelists
        </h2>
        <div class="form-group border-1">

            @foreach (var novelist in Model.Novelists)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="NovelistsIds" value="@novelist.Value" id="@novelist.Value">
                    <label class="form-check-label" for="@novelist.Value">
                        @novelist.Text
                    </label>
                </div>
            }
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
