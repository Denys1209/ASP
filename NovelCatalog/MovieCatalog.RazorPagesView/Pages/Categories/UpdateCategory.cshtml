@page "{id:int}"
@model NovelCatalog.RazorPagesView.Pages.Categories.UpdateCategoryModel
@{
    ViewData["Title"] = "Update Category";
}

<div class="container">
    <form method="post">
        <div class="form-group row">
            <label for="Name" class="col-sm-2 col-form-label">Category Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Category.Name" placeholder="Enter category name...">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <input type="submit" class="btn btn-primary" value="Update" />
            </div>
        </div>
    </form>
</div>
