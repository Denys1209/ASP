<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Novel catalog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-dark">
        <nav class="navbar navbar-expand-md navbar-dark   bg-dark container-fluid">
            <a class="navbar-brand" href="#">Novel Catalog</a>
            <div id="navbar" class="navbar-collapse collapse  justify-content-end">
                <ul class="navbar-nav ">
                    <li class="nav-item">
                        <a class="nav-link text-white link-navbar"asp-controller="Novels" asp-action="Index">Novels</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white link-navbar" asp-controller="Categories" asp-action="Index">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white link-navbar" asp-controller="Novelists" asp-action="Index">Novelists</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 mt-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - NovelCatalog.RazorPagesView - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
    </body>
</html>