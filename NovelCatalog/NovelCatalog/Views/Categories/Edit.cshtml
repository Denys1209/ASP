@model NovelCatalog.Domain.Models.Category
@{
    ViewData["Title"] = "Update category";
}

<div class="container">
    <form method="post">
        <div class="form-group row">
            <label for="Name" class="col-sm-2 col-form-label">Edit category</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" placeholder="Enter category name...">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <input type="submit" class="btn btn-primary" value="Update" />
            </div>
        </div>
    </form>
</div>

